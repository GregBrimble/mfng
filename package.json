{
  "name": "mfng",
  "version": "1.0.0",
  "description": "Microfrontends Next Generation",
  "license": "MIT",
  "author": "Hendrik Liebau <mail@hendrik-liebau.de>",
  "type": "module",
  "scripts": {
    "build": "run-p build:*",
    "build:html": "webpack",
    "build:rsc": "webpack -c webpack.config.rsc.js",
    "ci": "run-p compile:check format:check lint",
    "compile:check": "tsc",
    "dev": "concurrently -s all -n html,rsc -k 'npm run dev:html' 'npm run dev:rsc'",
    "start": "concurrently -s all -n html,rsc -k 'npm run start:html' 'npm run start:rsc'",
    "dev:html": "MODE=development wrangler dev -c src/html-worker/wrangler.toml --local",
    "dev:rsc": "MODE=development wrangler dev -c src/rsc-worker/wrangler.toml --local",
    "start:html": "wrangler dev -c src/html-worker/wrangler.toml",
    "start:rsc": "wrangler dev -c src/rsc-worker/wrangler.toml",
    "deploy": "npm run deploy:html && npm run deploy:rsc",
    "deploy:html": "wrangler publish -c src/html-worker/wrangler.toml",
    "deploy:rsc": "wrangler publish -c src/rsc-worker/wrangler.toml",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint": "eslint ."
  },
  "dependencies": {
    "htmlescape": "^1.1.1",
    "react": "18.3.0-next-6ff1733e6-20230225",
    "react-dom": "18.3.0-next-6ff1733e6-20230225",
    "react-markdown": "^8.0.5",
    "react-server-dom-webpack": "18.3.0-next-6ff1733e6-20230225",
    "server-only": "^0.0.1"
  },
  "devDependencies": {
    "@cloudflare/kv-asset-handler": "^0.3.0",
    "@cloudflare/workers-types": "^4.20230221.0",
    "@swc/core": "^1.3.22",
    "@types/htmlescape": "^1.1.1",
    "@types/loader-utils": "^2.0.3",
    "@types/node": "^18.11.14",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "concurrently": "^7.6.0",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-markdown": "^3.0.0",
    "loader-utils": "^3.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "resolve-typescript-plugin": "^2.0.0",
    "swc-loader": "^0.2.3",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "wrangler": "^2.11.0"
  }
}
